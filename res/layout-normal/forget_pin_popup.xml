<?xml version="1.0" encoding="utf-8"?>


     
<RelativeLayout
     xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="220dp"
    android:layout_height="150dp"
    android:background="#898989"
    android:id="@+id/RelativeMain"  
    xmlns:tools="http://schemas.android.com/tools"
     tools:context="${relativePackage}.${activityClass}"
     
     android:layout_marginTop="140dp">
    
    <TextView 
         android:id="@+id/text_enter_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
           android:text="Enter email for new pin"
               android:gravity="center" 
            android:textColor="#ffffff"
              android:textColorHint="#007236"
            android:textSize="17sp" 
           
        />
    
    <View
       android:id="@+id/SplitLine_hor1"
       android:layout_width="match_parent"
       android:layout_height= "0.3dp"
       android:background="#ffffff" 
       android:layout_below="@+id/text_enter_email"/>
    
    
  <EditText
            android:id="@+id/edit_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
          android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:background="@drawable/textfield"
            android:hint="Email"
               android:gravity="center" 
            android:textColor="#ffffff"
              android:textColorHint="#007236"
               android:layout_below="@+id/SplitLine_hor1"
                   android:inputType="textEmailAddress"
            android:textSize="17sp"
           >
           
      </EditText> 
   
    
   
  <ImageButton
        android:id="@+id/imgbtn_submit2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/edit_email"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:background="@drawable/submit_btn_pin" />
    
    
  
    <View
       
       android:layout_width="wrap_content"
        android:layout_height="2dp"
       android:layout_below="@+id/imgbtn_submit"
       android:layout_marginTop="20dp"/>

</RelativeLayout>

